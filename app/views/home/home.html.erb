<h1>This is home page11</h1>

<table border="1">
  <thead>
    <th style="background-color: #ccc" colspan="3">List of Students</th>
  </thead>
  <tr>
    <td>Student ID</td>
    <td>Full Name</td>
    <td>Level</td>
  </tr>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_id %></td>
        <td><%= student.name %></td>
        <td><%= student.level %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="/students">Click here to add new students</a>

<div style="width: 300px;background-color: #ccc;">
  <p>
    <h4>Database configurations</h4>
    <%= @database %>
  </p>
</div>
